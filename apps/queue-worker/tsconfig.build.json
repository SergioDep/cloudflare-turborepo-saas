{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@repo/queue-worker/*": ["./src/*"],
      "@repo/db/*": ["../../packages/db/src/*"]
    },
    "emitDeclarationOnly": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "rootDir": ".",
    "outDir": "dist"
  },
  "references": [
    {
      "path": "../../packages/db/tsconfig.build.json"
    }
  ],
  "include": ["./src", "*.d.ts"],
  "exclude": ["node_modules", "build", "dist"]
}
