{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "paths": {
      "@repo/db/*": ["./src/*"]
    },
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist"]
}
