    "fast-glob": "^3.3.2",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@repo/tsconfig": "*",
    "@types/node": "^22.10.1",
    "eslint": "^8.57.1",
    "prettier": "^3.4.1",
    "typescript": "^5.7.2"
  },
  "prettier": "@repo/prettier-config"
}
